#ifndef __vtkAMRVolumeImpl_h
#define __vtkAMRVolumeImpl_h

#include "../utils/chomboSetGet.h"
#include "vtkChomboReader.h"
#include "vtkRenderer.h"
#include "vtkVolumeRayCastFunction.h"
#include "vtkVolumeProperty.h"
#include "vtkVolumeCollection.h"

// Starting with gcc3.4.2, these forward declarations didn't work anymore:
//class vtkRenderer;
//class vtkVolumeProperty;
//class vtkVolumeRayCastFunction;
//class vtkVolumeCollection;

template<class REAL_T> class vtkAMRVolumeImpl : public vtkAMRVolume
{
  private:
    int m_maxLevel;
    int m_minLevel;
    int m_componentNum;
    float m_minScalarValue;
    float m_maxScalarValue;
    float m_sampleDistance;
  
    vtkChomboReader*     m_chomboReader;
    vtkRenderer*         m_renderer;
    vtkVolumeRayCastFunction* m_rayCastFunction;
    vtkVolumeProperty*   m_property;
    vtkVolumeCollection* m_volumes;  

    // Deliberately unimplemented:
    vtkAMRVolumeImpl();
    vtkAMRVolumeImpl(const vtkAMRVolumeImpl&);
    vtkAMRVolumeImpl&  operator=(const vtkAMRVolumeImpl&);


  public:
    vtkAMRVolumeImpl( vtkChomboReader * reader );
    virtual ~vtkAMRVolumeImpl();

    vtkTypeMacro(vtkAMRVolumeImpl, vtkObject);
    virtual void PrintSelf(ostream& os, vtkIndent indent);

    ChomboSetObjectMacro(m_chomboReader, ChomboReader, vtkChomboReader);
    ChomboGetObjectMacro(m_chomboReader, ChomboReader, vtkChomboReader);

    ChomboSetObjectMacro(m_renderer, Renderer, vtkRenderer);
    ChomboGetObjectMacro(m_renderer, Renderer, vtkRenderer);

    ChomboSetObjectMacro(m_rayCastFunction, RayCastFunction,
                         vtkVolumeRayCastFunction);
    ChomboGetObjectMacro(m_rayCastFunction, RayCastFunction,
                         vtkVolumeRayCastFunction);

    ChomboSetObjectMacro(m_property, Property, vtkVolumeProperty);
    ChomboGetObjectMacro(m_property, Property, vtkVolumeProperty);

    void SetComponentNum( int );
    ChomboGetMacro(m_componentNum, ComponentNum, int);

    ChomboSetMacro(m_minScalarValue, MinScalarValue, float);
    ChomboGetMacro(m_minScalarValue, MinScalarValue, float);

    ChomboSetMacro(m_maxScalarValue, MaxScalarValue, float);
    ChomboGetMacro(m_maxScalarValue, MaxScalarValue, float);

    ChomboSetMacro(m_sampleDistance, SampleDistance, float);
    ChomboGetMacro(m_sampleDistance, SampleDistance, float);
  
    void SetMaxLevel(int);
    ChomboGetMacro(m_maxLevel, MaxLevel, int);

    void SetMinLevel(int);
    ChomboGetMacro(m_minLevel, MinLevel, int);

    virtual void ClearVolumes();
    virtual void BuildVolumes();
    virtual void AddVolumesToRenderer();
    virtual void RemoveVolumesFromRenderer();
    virtual void Modified() { vtkObject::Modified(); }
};

#endif


